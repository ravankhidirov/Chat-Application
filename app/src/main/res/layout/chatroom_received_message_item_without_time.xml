<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    app:layout_constraintTop_toBottomOf="@id/messagingTime"
    android:background="@color/app_background">
    <LinearLayout
        android:id="@+id/left_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/received_message_color"
        android:padding="8dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/left_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/account_white"
            android:layout_marginRight="12dp"/>

        <TextView
            android:id="@+id/exactTimeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="08:43"
            android:textColor="@color/account_white"
            android:layout_gravity="start"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        app:cardCornerRadius="250dp"
        android:layout_marginRight="-10dp"
        android:layout_marginBottom="-10dp"
        android:layout_alignRight="@+id/left_chat_view"
        android:layout_alignBottom="@+id/left_chat_view">
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/elizabet" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>